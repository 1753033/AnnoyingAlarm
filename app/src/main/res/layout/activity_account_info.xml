<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AccountInfoActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical">
        <ImageView
            android:layout_marginTop="45dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/ic_logo_user"/>
        <TextView
            android:id="@+id/txtUsername"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trần Thanh Tâm"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="25sp"/>
        <TextView
            android:id="@+id/txtEmail"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="po.tran2k@gmail.com"
            android:textStyle="normal"
            android:textColor="@android:color/black"
            android:textSize="16sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtName"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="26dp"
            android:layout_marginRight="26dp"
            android:gravity="center_vertical"
            android:text="    Name: Trần Thanh Tâm"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:background="@drawable/round_bg"
            />
        <TextView
            android:id="@+id/txtEmail2"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="26dp"
            android:layout_marginRight="26dp"
            android:gravity="center_vertical"
            android:text="    Email: po.tran2k@gmail.com"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:background="@drawable/round_bg"
            />
        <Switch
            android:id="@+id/switchDSync"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="26dp"
            android:layout_marginRight="26dp"
            android:gravity="center_vertical"
            android:text="    Sync Data"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:background="@drawable/round_bg"
            />
        <Switch
            android:id="@+id/switchGSync"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="26dp"
            android:layout_marginRight="26dp"
            android:gravity="center_vertical"
            android:text="    Sync Google Calendar"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:background="@drawable/round_bg"
            />

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26dp"
            android:layout_marginRight="26dp"
            android:gravity="fill_vertical"
            android:text="@string/log_out"
            android:background="@drawable/round_bg"
            android:drawableStart="@drawable/ic_logout"
            android:layout_marginTop="60dp"
            />
    </LinearLayout>
</LinearLayout>