<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.annoyingalarm">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <uses-feature
        android:name="android.hardware.sensor.accelerometer"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".RelaxActivity"></activity>
        <activity android:name=".AlarmScreenShakeActivity" />
        <activity android:name=".AlarmScreenMathActivity" />
        <activity android:name=".AlarmScreenActivity" />
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity android:name=".ChallengeActivity" />
        <activity android:name=".SleepDetailActivity" />
        <activity android:name=".SleepHistoryActivity" />
        <activity android:name=".AccountInfoActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".MoreActivity" />
        <activity android:name=".NewsDetailActivity" />
        <activity android:name=".NewsActivity" />
        <activity android:name=".WeatherActivity" />
        <activity android:name=".AddAlarmActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".TodoListActivity" />

        <service
            android:name=".AlarmService"
            android:enabled="true" />

        <receiver android:name=".AlarmManagerHelper" />
    </application>

</manifest>